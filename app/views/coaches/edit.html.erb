<%= form_with model: @coach, local: true do |form| %>
    <% if @coach.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(coach.errors.count, "error") %> Les modifications n'ont pas pu être enregistrées :</h2>

        <ul>
        <% coach.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, placeholder: "Decrivez vous, votre parcours etc", class:"u-full-width" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :city, "Ville" %>
      <%= form.text_field :city, class:"u-full-width" %>
    </div>
    <br>
    <div class="">
      <%= form.label :sphere_id, "Modifier la catégorie" %>
      <%= select_tag :sphere_id, options_for_select(@spheres), prompt: "Sélectionner une catégorie", class:"u-full-width" %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit "Confirmer les modifications", class:"button-primary" %>
    </div>
<% end %>
