<%= form_tag coach_program_path, method: "put" do%>
  <h1 class="h3 mb-3 font-weight-normal text-center">Modifier le programme</h1>
  <div class="form-group">
    <%= label_tag 'Titre' %>
    <%= text_field_tag 'title', @program.title, class: 'form-control' %>
  </div>
  <br /> <br />
  <div class="form-group">
    <%= label_tag 'Description' %>
    <%= text_field_tag 'description', @program.description, class: 'form-control' %>
  </div>
  <br /> <br />
  <div class="form-group">
      <%= label_tag 'Domaine' %>
      <%= select_tag 'program_sphere_id', options_for_select(@spheres), prompt: "Sélectionner une catégorie", class:"u-full-width" %>
  </div>
  <br /> <br />
  <div class="form-actions">
      <%= submit_tag "Modifier mon programme", class: "btn btn-success" %>
  </div>
<% end %>
<% if @coach.errors.any? %>
  <div class="alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à modifier votre profil pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @coach.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>